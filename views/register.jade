extends layout

block content
    html
        body
            .navbar.navbar-inverse.navbar-fixed-top
                .container
                    .navbar-header
                        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/main')
                            | B
                            i.fa.fa-circle
                            i.fa.fa-circle
                            | KROSSING
                    .navbar-collapse.collapse
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='/signup') Вход
                            li
                                a(href='#')
                                   i.fa.fa-book(aria-hidden='true')
    br
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                br
                br
                br
                h1.text-center.login-title Регистрация
                    div.signup-wall
                        form.form-signin(class='form-signin', action='/signup', method='POST')
                            input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
                            input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
                            input(type='email', name='email', class='form-control', placeholder='Email',required)
                            input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
                            input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
                            br
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Зарегистрироваться
                            span.clearfix
                    #message
                        if message
                            h1.text-center.error-message #{message}
            #footer
