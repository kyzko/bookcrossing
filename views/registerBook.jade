            script.
             $("form").submit(function (e) {
                 e.preventDefault();
                 let title = $('#title').val();
                 let author = $('#author').val();
                 let year = $('#year').val();
                 // let user = user;
                 $.ajax({
                     type: "POST",
                     url: "api/registerBook",
                     data: JSON.stringify({
                         title: title,
                         author: author,
                         yearPublishing: year
                     }),
                     dataType: "json",
                     contentType: "application/json",
                     success: function (data) {
                         alert(data);
                         $('#resultUUID').empty();
                         $('#resultUUID').append(`${data}`)
                     }
                 })
             })
        form(id='resultUUID')

